{
  "model": "DeepLab",
  "version": "3",
  "dataset": "cityscapes",

  "training": {
    "batch_size": 5,
    "num_workers": 3,
    "optimizer": "SGD",
    "momentum": 0.9,
    "num_iterations": 80000,
    "learning_rate": 2e-4,
    "lr_schedule": "Poly",
    "lr_schedule_power": 0.9,
    "weight_decay": 5e-4,
    "use_sync_batchnorm": false,

    "data": {
      "split_id_list": 2,
      "labeled_samples": 100,
      "input_size": "768,768"
    },
    "unlabeled": {
      "train_unlabeled": true,
      "consistency_weight": 1,
      "consistency_loss": "CE",
      "pixel_weight": "sigmoid"
    }

  },
  "seed": 5555,
  "ignore_label": 250,

  "utils": {
    "save_checkpoint_every": 10000,
    "checkpoint_dir": "../saved/DeepLab",
    "val_per_iter": 2000,
    "log_per_iter": 100,
    "save_best_model": true
  }
}
